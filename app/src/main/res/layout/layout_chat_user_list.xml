<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_single_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/movie" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_single_online_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignEnd="@+id/user_single_image"
            android:layout_alignTop="@+id/user_single_image"
            android:src="@color/google_green"
            android:visibility="invisible"
            app:civ_border_color="@color/white"
            app:civ_border_width="0.8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_single_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/user_single_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_single_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shubh238"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/user_single_photo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/vector_photo"
                    android:tint="@color/dark_grey"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/user_single_status"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:text="Photo"
                    android:textColor="@color/dark_grey"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/msgnotify"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:src="@color/google_red"
            android:visibility="visible" />

        <TextView
            android:id="@+id/chattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="11m"
            android:textColor="@color/darker_grey" />
    </RelativeLayout>
</RelativeLayout>