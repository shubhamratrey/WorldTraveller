<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_square"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/register.country_codes_spinner"
            style="@style/TextViewSpinnerItem"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp"
            android:backgroundTint="@color/google_red"
            android:spinnerMode="dialog"
            android:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/dark_grey">
        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:hint="888888888"
            android:background="@null"
            android:drawableLeft="@drawable/vector_phone"
            android:drawablePadding="8dp"
            android:imeOptions="actionSend"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey"
            android:textCursorDrawable="@color/google_red" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text=" A verification code is send to your phone"
        android:textColor="@color/dark_grey" />

    <Button
        android:id="@+id/frag_verfy_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/signin_button"
        android:text="verify"
        android:textColor="@drawable/button_text_color_changer" />
</LinearLayout>
