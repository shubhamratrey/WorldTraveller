<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingStart="15dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/notification_relLayout1"
        android:layout_width="50dp"
        android:layout_marginEnd="10dp"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profile_single"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/movie"
            android:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profile_one"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/movie"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profile_two"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:src="@drawable/movie"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification_relLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="75dp"
        android:layout_toEndOf="@+id/notification_relLayout1">


        <TextView
            android:id="@+id/notification_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adsr238"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_type_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/notification_username"
            android:text="liked your post"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_type_middle"
            android:text="1d"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/notification_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/movie" />
</RelativeLayout>