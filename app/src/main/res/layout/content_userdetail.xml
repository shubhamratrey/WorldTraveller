<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile_picture_oval">

            <ProgressBar

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateDrawable="@drawable/progress"
                android:visibility="gone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userDetail_photo"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/userDetail_chngePhototxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Change Photo"
        android:textColor="@color/dark_grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:text="Name"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <EditText

        android:id="@+id/userDetail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/google_red"
        android:hint="Shubh"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:text="Bio"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <AutoCompleteTextView
        android:id="@+id/userDetail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/google_red"
        android:hint="StoryPredictor"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text="StoryPredictor"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/google_red" />

    <Button
        android:id="@+id/userDetailSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/signin_button"
        android:backgroundTint="@color/google_red"
        android:text="@string/save"
        android:textColor="@color/dark_grey" />
</LinearLayout>
