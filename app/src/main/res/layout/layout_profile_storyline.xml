<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/vector_single_dot"
        android:backgroundTint="@color/light_grey" />

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/vector_single_dot"
        android:backgroundTint="@color/light_grey" />

    <TextView
        android:id="@+id/profile_storyline_album_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Trip"
        android:textColor="@color/dark_grey" />

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/vector_single_dot"
        android:backgroundTint="@color/light_grey" />

    <TextView
        android:id="@+id/profile_storyline_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/google_button"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingVertical="2dp"
        android:text="Mumbai"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/vector_threedots"
        android:backgroundTint="@color/light_grey" />


    <GridView
        android:id="@+id/profile_self_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:horizontalSpacing="5dp"
        android:layout_marginHorizontal="10dp"
        android:nestedScrollingEnabled="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none">

    </GridView>


</LinearLayout>
